generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  news      News[]
  createdAt DateTime @default(now())
}

model News {
  id          String   @id @default(uuid())
  title       String
  content     String
  image       String?
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  publishedAt DateTime?
  isPublished Boolean  @default(false)
}

model Position {
  id          String   @id @default(uuid())
  title       String
  description String
  location    String
  isActive    Boolean  @default(true)
  postedAt    DateTime @default(now())
}

enum Role {
  ADMIN
  EDITOR
  USER
}
